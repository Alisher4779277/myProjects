@model Qabulxona.Models.Info
@{
    ViewBag.Title = "Retweet";
    Layout = "~/Views/Shared/View.cshtml";
}

@using (Html.BeginForm("Retweet", "Cabinet", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="panel panel-primary">
            <div class="panel-heading h1" style="margin-top:0px;"><p class="h3" style="padding-top:0.5em; padding-left:1em;">Йўналтириш</p></div>
            <div class="panel-body">
                <input type="button" class="btn btn-primary" onclick="window.location.href = '/@ViewBag.Url'" value="Назад в список" />
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.Label("Кимга йўналтирмоқ", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.User, SelectLists.Users(1), htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Бажариш муддати", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.DaysToSolve, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DaysToSolve, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Изоҳ", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Comment, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Файлни бириктириш", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" id="VisaFile" name="VisaFile" value="asd" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Юбориш" class="btn btn-default btn-primary" style="width:225px;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
