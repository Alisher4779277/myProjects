@{
    ViewBag.Title = "About";
}

<hr />

<div class="row">
    <div class="col-sm-4" style="text-align:center">
    </div>
    <div class="col-sm-4" style="text-align:center;">
        <div class="col-md-12">
            <img src="~/Models/Images/gerb.png" style="width:84px; height:94px;" />
        </div>

        <a href="~/Home/IndexUz">
            <strong>
                Виртуальная приёмная хакима Сергелийского района города Ташкент
            </strong>
        </a>

    </div>
    <div class="col-sm-4" style="text-align:right   ">
            <div class="row">
                <img src="~/Models/Images/flag_uzbekistana.png" onclick="window.location.href='/Home/IndexUz'" style="width:40px; height:20px;" />
                <img src="~/Models/Images/flag_rossii.png" onclick="window.location.href='/Home/Index'" style="width:40px; height:20px;" />
            </div>
        </div>
</div>

<hr />

<div style="padding-top:2em; padding-bottom:2em; text-align:center">
    <strong>
        <var class="h4">
            У Вас есть нерешённые проблемы, заявления, жалобы или предложения? <br />
            Направляйте их хакиму Сергелийского района города Ташкент отправив обращение или позвонив по короткому номеру "1071"
        </var>
    </strong>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="panel panel-success">
            <div class="panel-heading h1"><p class="h3" style="padding-top:0.5em; padding-left:1em;">Ваше обращение отправлено успешно</p></div>
            <div class="panel-body">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                
                <div class="form-group">
                    @Html.Label("Внимание!!! Cохраните следующие данные", htmlAttributes: new { @class = "control-label col-md-4" })
                </div>

                <div class="form-group h4">
                    @Html.Label("Номер обращения:", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6" style="padding-top:0.4em;">
                        @ViewBag.num
                    </div>
                </div>

                <div class="form-group h4">
                    @Html.Label("Код проверки состояния обращения:", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6" style="padding-top:0.4em;">
                        @ViewBag.pas
                    </div>
                </div>

            </div>
        </div>
    </div>
}

<input type="button" class="btn btn-info" value="Назад" onclick="window.location.href='/home/index'"/>

<hr />




