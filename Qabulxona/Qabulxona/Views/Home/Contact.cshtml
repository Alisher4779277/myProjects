@model Qabulxona.Models.Info

@{
    ViewBag.Title = "Contact";
}

<div style="text-align:right" class="col-md-12">
    <div class="row">
        <img src="~/Models/Images/flag_uzbekistana.png" onclick="window.location.href='/Home/ContactUz'" style="width:40px; height:20px;" />
        <img src="~/Models/Images/flag_rossii.png" onclick="window.location.href = '/Home/Contact'" style="width:40px; height:20px;" />
    </div>
</div>

<hr />

<div class="row">
    <div class="col-sm-4" style="text-align:center">
    </div>
    <div class="col-sm-4" style="text-align:center;">
        <div class="col-md-12">
            <img src="~/Models/Images/gerb.png" style="width:84px; height:94px;" />
        </div>

        <a href="~/Home/IndexUz">
            <strong>
                Виртуальная приёмная хакима Сергелийского района города Ташкент
            </strong>
        </a>

    </div>
    <div class="col-sm-4" style="text-align:right   ">
            <div class="row">
                <img src="~/Models/Images/flag_uzbekistana.png" onclick="window.location.href='/Home/IndexUz'" style="width:40px; height:20px;" />
                <img src="~/Models/Images/flag_rossii.png" onclick="window.location.href='/Home/Index'" style="width:40px; height:20px;" />
            </div>
        </div>
</div>

<hr />

<div style="padding-top:2em; padding-bottom:2em; text-align:center">
    <strong>
        <var class="h4">
            У Вас есть нерешённые проблемы, заявления, жалобы или предложения? <br />
            Направляйте их хакиму Сергелийского района города Ташкент отправив обращение или позвонив по короткому номеру "1071"
        </var>
    </strong>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="panel panel-success">
            <div class="panel-heading h1"><p class="h3" style="padding-top:0.5em; padding-left:1em;">Проверить результат обращения</p></div>
            <div class="panel-body">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.RequestNumber, "Номер обращения:", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.RequestNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RequestNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.RequestPassword, "Код проверки состояния обращения:", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.RequestPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RequestPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Captcha, "Код проверки", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <img src='@Url.Action("Captcha", "Home")' alt='captcha' />
                        @Html.EditorFor(model => model.Captcha, new { htmlAttributes = new { @class = "form-control", @style = "width:100px;" } })
                        @Html.ValidationMessageFor(model => model.Captcha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" value="Проверить" class="btn btn-default btn-success" style="width:225px;" />
                    </div>
                </div>

            </div>
        </div>
    </div>
}

<input type="button" class="btn btn-info" value="Назад" onclick="window.location.href='/home/index'" />

<hr />




