
@{
    Layout = null;
    Qabulxona.Models.QabulxonaEntities db = new Qabulxona.Models.QabulxonaEntities();
    int i = 0, j = 0, k = 0, l = 0, f = 0;
    try
    {
        i = db.Requests.Where(m => m.RequestStatusId == 1).Count();
        j = db.Requests.Where(m => m.RequestStatusId == 2).Count();
        k = db.Requests.Where(m => m.RequestStatusId == 3).Count();
        l = db.Requests.Where(m => m.RequestStatusId == 4).Count();
        f = db.Requests.Where(m => m.RequestStatusId == 5).Count();
    }
    catch { }

}

