<!DOCTYPE html> 
<html> 
    <head> 
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title> 
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/Mobile/css", "~/Content/jquerymobile/css")
        @Scripts.Render("~/bundles/jquery", "~/bundles/jquerymobile")
        <!-- Google Fonts -->
        <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>
        <!-- Bootstrap -->
        <link rel="stylesheet" href="~/Content/ustora/css/bootstrap.min.css">
        <link href="~/Content/ustora/Contact.css" rel="stylesheet" />
        <!-- Font Awesome -->
        <link rel="stylesheet" href="~/Content/ustora/css/font-awesome.min.css">

        <!-- Custom CSS -->
        <link rel="stylesheet" href="~/Content/ustora/css/owl.carousel.css">
        <link rel="stylesheet" href="~/Content/ustora/style.css">
        <link rel="stylesheet" href="~/Content/ustora/css/responsive.css">

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

        <script>
            $(document).ready(function () {
                $.mobile.ajaxEnabled = false; 
            });
        </script>
    </head> 
<body> 

    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-6" style="text-align:right;">

                </div>

                <div class="col-md-6">
                    <div class="header-right">
                        <ul class="list-unstyled list-inline">
                            <li class="dropdown dropdown-small">
                                <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" href="~/Home/Index"><span class="value">Узб|Рус 								</span>@*<b class="caret">*@</b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="~/Home/Index">Узб</a></li>

                                </ul>
                            </li>
                            <li class="dropdown dropdown-small">
                                <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" href="~/Account/Login"><span class="value">Вход </span>@*<b class="caret">*@</b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="~/Home/PersonalcabinetRu">Персоналный кабинет</a></li>
                                </ul>
                            </li>
                            @*<li><a href="~/Account/Login"><i class="fa fa-user"></i> Кириш</a></li>
                                <li><a href="~/Home/Exit"><i class="fa fa-user"></i> Чиқиш</a></li>*@

                            <li><a href="~/Registration/RegisterRu"><i class="fa fa-user"></i> Регистрация</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End header area -->

    <div data-role="page" data-theme="a">
        @*@Html.Partial("_ViewSwitcher")*@
        <div data-role="header">
            <div class="site-branding-area">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="logo">
                                <h4><a href="~/Home/IndexRu"><img src="~/Content/ustora/img/smartphone.png" style="width:50px; height:50px;"><span class="cart-amunt">   Mobilbor</span></a></h4>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="shopping-item">
                                <a href="~/home/AddphoneRu"><i class="fa fa-plus"></i><span class="cart-amunt">  Подать объявление</span>  <span class="product-count"></span></a>
                            </div>
                            
                            <div style="text-align:right">
                                <form action="~/Home/OpenphonebysearchRu" method="get">
                                    <input type="text" name="search" style="width:310px;" placeholder="Поиск...">
                                    <input type="submit" value="Поиск">
                                </form>
                            </div>
                            <br />

                        </div>
                    </div>
                </div>
            </div> 
        </div>


        <div class="mainmenu-area">
            <div class="container">
                <div class="row">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li><a href="~/Home/IndexRu">Главная страница</a></li>
                            <li><a href="~/Home/OpenphoneRu/0">Мобильные телефоны</a></li>
                            <li><a href="~/Home/ContactRu">Контакт</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div> <!-- End mainmenu area -->

        <div data-role="content">
            @RenderSection("featured", false)
            @RenderBody()		
        </div>
    </div>

    <div class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">

                </div>

                <div class="col-md-4">
                    <div class="copyright">
                        <p>&copy; 2017 Все права зашищены. <a href="http://www.mobilbor.uz" target="_blank">Mobilbor.uz</a></p>
                    @Html.Partial("_ViewSwitcher")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>

    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="~/Content/ustora/js/owl.carousel.min.js"></script>
    <script src="~/Content/ustora/js/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="~/Content/ustora/js/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="~/Content/ustora/js/main.js"></script>
</body>
</html>